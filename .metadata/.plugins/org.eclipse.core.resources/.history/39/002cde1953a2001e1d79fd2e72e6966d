package codingninjas;

public class LongestSubarrayWithGivenSumKPositives {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		int[] a = new int[] {0,0,0,3,10};
		int k = 10;
		System.out.println(longestSubarrayWithSumK(a, k));

	}
	
	public static int longestSubarrayWithSumK(int []a, long k) {
		int l = -1, r = -1;
		int currSum = 0;
		int longestSubArrLen = 0;
		int n = a.length;
		
		while(r < n) {
			if(currSum < k) {
				currSum += a[++r];
			} else if(currSum > k) {
				currSum -= a[++l];
			} else {
				longestSubArrLen = Math.max(longestSubArrLen, r-l);
				if(r+1 < n) {
					currSum += a[++r];
				} else {
					break;
				}
			}
		}
		
		return longestSubArrLen;
    }

}
