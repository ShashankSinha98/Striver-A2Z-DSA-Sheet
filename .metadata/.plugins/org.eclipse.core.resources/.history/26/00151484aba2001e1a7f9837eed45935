package leetcode;

public class CheckIfArrayIsSortedAndRotated {

	public static void main(String[] args) {

	}
	
	public boolean check(int[] nums) {
		int n = nums.length;
		
		if(n<=1) return true;
		int dip = -1;
		for(int i=1; i<n; i++) {
			if(nums[i-1] > nums[i]) {
				if(dip==-1)
					dip = nums[i-1];
				else 
					return false;
			}
			
			if(dip != -1 && nums[i] > dip) return false;
		}
		
		return true;
    }

}
