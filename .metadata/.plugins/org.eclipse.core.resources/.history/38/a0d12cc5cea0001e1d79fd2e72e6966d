package codingninjas;

import java.util.*;
public class UnionOfTwoSortedArrays {

	public static void main(String[] args) {
		
		int[] arr = new int[] {};
		System.out.println(removeDuplicates(arr, arr.length));

	}
	
	public static List<Integer> sortedArray(int []a, int []b) {
		if(a.length==0) return removeDuplicates(b, b.length);
    }
	
	public static List<Integer> removeDuplicates(int[] arr,int n) {
		
		if(n==0) return new ArrayList<>();
		
		int unique_index = 0;
		for(int i=1; i<n; i++) {
			int ai = arr[i];
			if(ai != arr[unique_index]) {
				arr[++unique_index] = ai;
			}
		}
		
		List<Integer> res = new ArrayList<>();
		for(int i=0; i<=unique_index; i++) {
			res.add(arr[i]);
		}
		
		return res;
	}

}
